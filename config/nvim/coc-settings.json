{
 "languageserver": {
     "lua": {
      "command": "~/.vscode/extensions/sumneko.lua-3.4.2-linux-x64/server/bin/lua-language-server",
      "args": ["-E", "~/.vscode/extensions/sumneko.lua-3.4.2/server/bin/main.lua"],
      "rootPatterns": [".git"],
      "filetypes": ["lua"]
    },

  "haskell": {
    "command": "haskell-language-server-wrapper",
    "args": ["--lsp"],
    "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
    "filetypes": ["haskell", "lhaskell"]
  }
},
"Lua.telemetry.enable": false
}
